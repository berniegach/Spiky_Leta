<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.orders.SOOrderOverviewF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20">
        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="date"
            android:gravity="end"
            android:layout_marginEnd="10dp"/>

        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="@drawable/circular_progress_bar_background"
            android:indeterminate="false"
            android:max="5"
            android:progress="0"
            android:progressDrawable="@drawable/circlular_progress_bar" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:id="@+id/username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:paddingStart="10dp"
                android:text="username"/>
            <TextView
                android:id="@+id/table"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="table"
                android:textStyle="bold" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/sec_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginTop="2dp"
            android:background="@color/secondary_background">

            <LinearLayout
                android:id="@+id/orders_base"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:showDividers="middle"
                android:divider="?android:listDivider">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="No"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:text="Item"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="Price"
                        android:gravity="end"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="10">
            <Button
                android:id="@+id/accept"
                style="?android:textAppearanceSmall"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="@dimen/button_minimum_height"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/login_button_rounded"
                android:fontFamily="@font/amita"
                android:gravity="center"
                android:text="Accept"
                android:textColor="@color/text"
                android:textStyle="bold" />
            <Button
                android:id="@+id/decline"
                style="?android:textAppearanceSmall"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="@dimen/button_minimum_height"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/login_button_rounded"
                android:fontFamily="@font/amita"
                android:gravity="center"
                android:text="decline"
                android:textColor="@color/text"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>