<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.spikingacacia.leta.ui.PreferencePic/>
    <PreferenceCategory app:title="General">
        <EditTextPreference
            app:useSimpleSummaryProvider="true"
            app:enabled="false"
            app:defaultValue="Leta"
            app:key="email"
            app:maxLines="1"
            app:singleLine="true"
            app:title="Email Address" />
        <EditTextPreference
            app:useSimpleSummaryProvider="true"
            app:defaultValue="Leta"
            app:key="username"
            app:maxLines="1"
            app:singleLine="true"
            app:title="Restaurant Name" />
        <SeekBarPreference
            app:key="order_radius"
            app:defaultValue="10"
            android:max="50"
            android:min="2"
            app:title="Order radius"
            app:seekBarIncrement="1"
            app:showSeekBarValue="true"
            app:updatesContinuously="true"
            app:adjustable="true"
            app:summary="@string/pref_order_range" />

        <EditTextPreference
            app:isPreferenceVisible="false"
            app:key="mpesa_code"
            app:title="Mpesa Till Number"
            android:summary="Enter the Mpesa till number used to buy goods and services"
            app:useSimpleSummaryProvider="true"/>
        <!--<Preference
            app:key="number_of_tables"
            app:title="Number of tables" />-->
        <ListPreference
            app:key="seller_type"
            android:title="Establishment Type"
            android:defaultValue="0"
            android:entries="@array/seller_type_entries"
            android:entryValues="@array/seller_type_values"/>
        <Preference
            app:isPreferenceVisible="false"
            app:key="subscription"
            app:title="Subscription "
            app:enabled="false" />
    <PreferenceCategory android:title="Operating time">
        <Preference
            android:dependency="24_hours"
            app:key="opening_time"
            android:summary="0:00"
            android:title="Opening Time"/>
        <Preference
            android:dependency="24_hours"
            app:key="closing_time"
            android:title="Closing Time"
            android:summary="0:00"/>
        <CheckBoxPreference
            android:disableDependentsState="true"
            app:key="24_hours"
            android:title="24 Hours"
            android:summary="We don't close"/>
    </PreferenceCategory>

        <PreferenceCategory android:title="Dining Options">
            <CheckBoxPreference
                android:enabled="false"
                app:key="c_sit_in"
                android:title="Sit in"/>
            <CheckBoxPreference
                android:enabled="false"
                app:key="c_take_away"
                android:title="Take away"/>
            <CheckBoxPreference
                app:key="c_delivery"
                android:title="Delivery"
                android:summaryOn="Yes, I'm able to handle my own delivery"/>
        </PreferenceCategory>

    </PreferenceCategory>


    <PreferenceCategory app:title="Location">
        <Preference android:title="Change Location"
            android:key="location">
            <intent android:action="android.intent.action.VIEW"
                android:targetPackage="com.spikingacacia.leta"
                android:targetClass="com.spikingacacia.leta.ui.MapsA" >
            </intent>
        </Preference>
        <SwitchPreference
            android:defaultValue="true"
            android:key="online_visibility"
            android:title="Visible online"
            android:summary="Do you wish your business to be seen online by customers" />
        <SwitchPreference
            android:defaultValue="false"
            android:dependency="online_visibility"
            android:key="online_delivery"
            android:title="Delivery"
            android:summary="Do you make delivery" />
   </PreferenceCategory>
    <PreferenceCategory
        android:title="Legal">
        <Preference
            app:fragment="com.spikingacacia.leta.ui.SettingsActivity$TermsAndConditionsPreferenceFragment"
            app:title="Terms and Conditions" />
        <Preference
            app:fragment="com.spikingacacia.leta.ui.SettingsActivity$PrivacyPolicyPreferenceFragment"
            app:title="Privacy Policy" />

    </PreferenceCategory>
    <Preference
        app:fragment="com.spikingacacia.leta.ui.SettingsActivity$AboutPreferenceFragment"
        app:icon="@drawable/ic_help"
        app:title="@string/about"
        app:allowDividerAbove="true"/>

</PreferenceScreen>